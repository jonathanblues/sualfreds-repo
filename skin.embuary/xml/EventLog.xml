<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<menucontrol>6666</menucontrol>
	<include>PropertyIncludes</include>
	<controls>
		<include>Background</include>
		<control type="grouplist">
			<include>Dialog_PopupOpenClose</include>
			<centertop>50%</centertop>
			<left>100</left>
			<right>100</right>
			<height max="940">auto</height>
			<orientation>vertical</orientation>
			<itemgap>20</itemgap>
			<align>center</align>
			<!-- edit -->
			<control type="group">
				<height>50</height>
				<control type="label">
					<width>100%</width>
					<height>48</height>
					<font>Reg24</font>
					<aligny>center</aligny>
					<textoffsetx>5</textoffsetx>
					<textcolor>text_white</textcolor>
					<label>$LOCALIZE[14111]</label>
				</control>
				<control type="image">
					<width>100%</width>
					<top>45</top>
					<height>2</height>
					<texture colordiffuse="lightgrey">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<width>100%</width>
					<top>45</top>
					<height>2</height>
					<texture colordiffuse="emby">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
					<include>WindowOpen_GreenBar</include>
				</control>
			</control>
			<!-- list -->
			<control type="group">
				<height>820</height>
				<control type="image">
					<height>820</height>
					<texture colordiffuse="thumb_background">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="list" id="50">
					<centerleft>50%</centerleft>
					<top>10</top>
					<height>800</height>
					<onup>12</onup>
					<onleft>5</onleft>
					<onright>5</onright>
					<ondown>100</ondown>
					<pagecontrol>60</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout height="75" width="1720">
						<control type="image">
							<height>75</height>
							<width>75</width>
							<left>10</left>
							<bordersize>5</bordersize>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<right>20</right>
							<left>100</left>
							<height>75</height>
							<aligny>center</aligny>
							<font>Reg24</font>
							<textcolor>text_white</textcolor>
							<textshadow>text_shadow</textshadow>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Property(Event.Description), - ]$INFO[ListItem.Label2,[COLOR softgrey] [,][/COLOR]]</label>
						</control>
					</itemlayout>
					<focusedlayout height="75" width="1720">
						<control type="image">
							<width>100%</width>
							<height>75</height>
							<texture colordiffuse="list_hover">common/white.jpg</texture>
							<visible>Control.HasFocus(50)</visible>
						</control>
						<control type="image">
							<height>75</height>
							<width>75</width>
							<left>10</left>
							<bordersize>5</bordersize>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<right>20</right>
							<left>100</left>
							<height>75</height>
							<aligny>center</aligny>
							<font>Reg24</font>
							<textcolor>text_white</textcolor>
							<textshadow>text_shadow</textshadow>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Property(Event.Description), - ]$INFO[ListItem.Label2,[COLOR softgrey] [,][/COLOR]]</label>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="60">
					<right>0</right>
					<top>0</top>
					<bottom>0</bottom>
					<width>4</width>
					<orientation>vertical</orientation>
					<showonepage>false</showonepage>
					<texturesliderbackground colordiffuse="00ffffff">common/white.jpg</texturesliderbackground>
					<texturesliderbar colordiffuse="softgrey">common/white.jpg</texturesliderbar>
				</control>
			</control>
		</control>
		<!-- Menu control -->
		<control type="group">
			<include>FullscreenDimensions</include>
			<include content="DiffuseMask">
				<param name="visible">ControlGroup(4000).HasFocus</param>
			</include>
			<control type="group">
				<visible>ControlGroup(4000).HasFocus</visible>
				<include>Visible_PopupOpenClose</include>
				<centerleft>50%</centerleft>
				<width>384</width>
				<centertop>50%</centertop>
				<height>970</height>
				<control type="grouplist" id="4000">
					<orientation>vertical</orientation>
					<height>auto</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<onright>100</onright>
					<onleft>100</onleft>
					<onback>100</onback>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image" id="4001">
						<width>100%</width>
						<height>10</height>
						<texture border="5" colordiffuse="panel">common/menu_top.png</texture>
					</control>
					<control type="spincontrolex" id="3">
						<include content="CommonButton"/>
						<label>$LOCALIZE[31066]</label>
					</control>
					<control type="image" id="4002">
						<width>100%</width>
						<height>10</height>
						<texture border="5" colordiffuse="panel">common/menu_bottom.png</texture>
					</control>
				</control>
			</control>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">100</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">100</param>
		</include>
	</controls>
</window>
