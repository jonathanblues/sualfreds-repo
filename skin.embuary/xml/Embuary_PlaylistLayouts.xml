<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- video playlist -->
	<include name="VideoPlaylistLayout">
		<!-- Background -->
		<include>Background</include>
		<!-- Dialog -->
		<control type="grouplist" id="500">
			<include>Window_OpenClose</include>
			<width>100%</width>
			<height>100%</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">400</scrolltime>
			<itemgap>-80</itemgap>
			<include>Bounce_Up_Down</include>
			<!-- Meta -->
			<control type="group">
				<width>1920</width>
				<height>604</height>
				<control type="group">
					<top>128</top>
					<height>435</height>
					<width>1920</width>
					<!-- poster -->
					<include>MetaPoster</include>
					<!-- Meta -->
					<control type="group">
						<width>1920</width>
						<height>604</height>
						<control type="grouplist">
							<left>370</left>
							<orientation>vertical</orientation>
							<height>500</height>
							<align>top</align>
							<itemgap>0</itemgap>
							<width>1480</width>
							<control type="label">
								<width>1040</width>
								<height>60</height>
								<label>$INFO[ListItem.TVShowTitle,, - ]$INFO[ListItem.Season,S,:]$INFO[ListItem.Episode,E, - ]$INFO[ListItem.Title]</label>
								<font>Reg37</font>
								<aligny>top</aligny>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>!String.IsEmpty(ListItem.Title)</visible>
							</control>
							<control type="label">
								<width>1040</width>
								<height>60</height>
								<label>$LOCALIZE[31186]</label>
								<font>Reg37</font>
								<aligny>top</aligny>
								<shadowcolor>text_shadow</shadowcolor>
								<visible>String.IsEmpty(ListItem.Title) + String.IsEqual(ListItem.Filename,stream) + String.Contains(ListItem.Filenameandpath,/emby/videos/)</visible>
							</control>
							<!-- meta -->
							<control type="group">
								<visible>!String.IsEqual(ListItem.DBType,episode)</visible>
								<height>40</height>
								<include>MetaMovieInfos</include>
							</control>
							<control type="group">
								<height>40</height>
								<visible>String.IsEqual(ListItem.DBType,episode)</visible>
								<include>MetaEpisodeInfos</include>
							</control>
							<!-- buttons -->
							<control type="grouplist" id="100">
								<height>75</height>
								<orientation>horizontal</orientation>
								<itemgap>5</itemgap>
								<onright>noop</onright>
								<onleft>900</onleft>
								<control type="button" id="8">
									<include>LightGreyButton</include>
									<label>$LOCALIZE[15067]</label>
									<onclick>close</onclick>
									<onup>SetFocus(6666)</onup>
									<ondown>SetFocus(50)</ondown>
								</control>
								<control type="button" id="21">
									<include>LightGreyButton</include>
									<label>$LOCALIZE[190]</label>
									<onup>SetFocus(6666)</onup>
									<ondown>SetFocus(50)</ondown>
								</control>
								<control type="button" id="22">
									<include>LightGreyButton</include>
									<label>$LOCALIZE[192]</label>
									<onclick>close</onclick>
									<onup>SetFocus(6666)</onup>
									<ondown>SetFocus(50)</ondown>
								</control>
								<control type="button" id="97">
									<visible>!String.IsEmpty(ListItem.Plot)</visible>
									<include>LightGreyButton</include>
									<width>70</width>
									<height>50</height>
									<font>material24</font>
									<label>îƒ‰</label>
									<onclick>RunScript(script.skin.helper.service,action=textviewer,header='$ESCVAR[TinyInfoDialogHeadline]',message='$ESCVAR[TinyInfoDialogPlot]')</onclick>
									<onup>SetFocus(6666)</onup>
									<ondown>SetFocus(50)</ondown>
								</control>
							</control>
							<!-- genre -->
							<include>MetaGenre</include>
							<!-- plot -->
							<control type="textbox">
								<width>100%</width>
								<height max="130">auto</height>
								<align>justify</align>
								<aligny>top</aligny>
								<label>$INFO[ListItem.Tagline,[B],[/B][CR]]$INFO[ListItem.Plot]</label>
								<font>Light24</font>
								<shadowcolor>text_shadow</shadowcolor>
								<autoscroll>false</autoscroll>
								<visible>!String.IsEmpty(ListItem.Plot)</visible>
							</control>
							<control type="label">
								<height>20</height>
								<visible>!String.IsEmpty(ListItem.Plot)</visible>
							</control>
							<!-- flags -->
							<include content="MetaFlags">
								<param name="type" value="MediaFlags"/>
							</include>
						</control>
						<!-- logo -->
						<control type="image">
							<right>70</right>
							<width>400</width>
							<height>155</height>
							<texture>$VAR[ListItemClearlogo]</texture>
							<aspectratio>keep</aspectratio>
						</control>
					</control>
				</control>
			</control>
			<!-- Items -->
			<include content="WideWidget">
				<param name="id" value="50"/>
				<param name="headline" value="$LOCALIZE[10028]"/>
				<param name="onup" value="100"/>
				<param name="ondown" value="SetProperty(BounceDown,1,home)"/>
				<param name="use_custom_content" value="false"/>
			</include>
		</control>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">500</param>
		</include>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">500</param>
			<param name="enabled">false</param>
			<param name="custom_animation">Container(500).HasPrevious</param>
		</include>
	</include>
	<!-- music playlist -->
	<include name="MusicPlaylistLayout">
		<!-- Background -->
		<include>Background</include>
		<!-- Dialog -->
		<control type="grouplist" id="500">
			<include>Window_OpenClose</include>
			<width>100%</width>
			<height>100%</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">400</scrolltime>
			<itemgap>-80</itemgap>
			<include>Bounce_Up_Down</include>
			<!-- Meta -->
			<control type="group">
				<width>1920</width>
				<height>530</height>
				<control type="group">
					<top>128</top>
					<height>435</height>
					<width>1920</width>
					<!-- Thumb image -->
					<include>MetaSquareThumb</include>
					<!-- Meta -->
					<control type="group">
						<width>1920</width>
						<height>604</height>
						<control type="grouplist">
							<left>434</left>
							<orientation>vertical</orientation>
							<height>500</height>
							<align>top</align>
							<itemgap>0</itemgap>
							<width>1480</width>
							<control type="label">
								<width>1000</width>
								<height>60</height>
								<label>$INFO[ListItem.Title]</label>
								<font>Reg37</font>
								<aligny>top</aligny>
								<shadowcolor>text_shadow</shadowcolor>
							</control>
							<control type="label">
								<width>1000</width>
								<height>60</height>
								<label>$INFO[ListItem.Artist]$INFO[ListItem.Album, - ]</label>
								<font>Reg37</font>
								<aligny>top</aligny>
								<shadowcolor>text_shadow</shadowcolor>
							</control>
							<!-- meta -->
							<include>MetaSongInfos</include>
							<!-- Buttons -->
							<control type="grouplist" id="100">
								<height>75</height>
								<orientation>horizontal</orientation>
								<itemgap>5</itemgap>
								<onright>noop</onright>
								<onleft>900</onleft>
								<control type="button" id="8">
									<include>LightGreyButton</include>
									<label>$LOCALIZE[15067]</label>
									<onclick>close</onclick>
									<onup>SetFocus(6666)</onup>
									<ondown>SetFocus(50)</ondown>
								</control>
								<control type="button" id="21">
									<include>LightGreyButton</include>
									<label>$LOCALIZE[190]</label>
									<onup>SetFocus(6666)</onup>
									<ondown>SetFocus(50)</ondown>
									<visible>!MusicPartyMode.Enabled</visible>
								</control>
								<control type="button" id="22">
									<include>LightGreyButton</include>
									<label>$LOCALIZE[192]</label>
									<onclick>close</onclick>
									<onup>SetFocus(6666)</onup>
									<ondown>SetFocus(50)</ondown>
									<visible>!MusicPartyMode.Enabled</visible>
								</control>
							</control>
							<!-- Genre -->
							<include>MetaGenre</include>
							<!-- flags -->
							<include content="MetaFlags">
								<param name="type" value="MediaFlags"/>
							</include>
						</control>
						<!-- logo -->
						<include>MetaClearlogo</include>
					</control>
				</control>
			</control>
			<!-- Items -->
			<include content="SquareWidget">
				<param name="id" value="50"/>
				<param name="headline" value="$LOCALIZE[10500]"/>
				<param name="onup" value="100"/>
				<param name="ondown" value="SetProperty(BounceDown,1,home)"/>
				<param name="use_custom_content" value="false"/>
			</include>
		</control>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">500</param>
		</include>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">500</param>
			<param name="enabled">false</param>
			<param name="custom_animation">Container(500).HasPrevious</param>
		</include>
	</include>
</includes>
